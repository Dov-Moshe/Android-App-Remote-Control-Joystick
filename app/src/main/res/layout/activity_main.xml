<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="viewModel"
            type="com.example.remotejoystick.view_model.ViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hapticFeedbackEnabled="false"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/ip_flight_gear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:digits="0123456789."
            android:hint="IP Address"
            android:inputType="textPersonName"
            android:textSize="22sp"
            android:background="@drawable/input_style"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/port_flight_gear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Port"
            android:inputType="number"
            android:textSize="22sp"
            android:background="@drawable/input_style"
            android:padding="12dp"/>

        <Button
            android:id="@+id/button_connect"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/connect_button"
            android:text="Connect"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvXmouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="asd"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvYmouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asd"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/inside_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="250dp"
            android:orientation="horizontal">

            <!--TextView
                android:id="@+id/throttle_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="throttle"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="18dp" /-->


            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/throttle_bar"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:max="2000"
                    android:progress="@={viewModel.throttle, default=0}"
                    android:rotation="270"
                    android:thumbTint="#22b573"
                    android:progressTint="#29abe2"/>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/joystick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal" />

        </LinearLayout>

        <!--TextView
            android:id="@+id/rudder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rudder"
            android:textAlignment="center"
            android:textSize="18dp" /-->
        <SeekBar
            android:id="@+id/rudder_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="2000"
            android:progress="@={viewModel.rudder, default=1000}"
            android:thumbTint="#22b573"
            android:progressTint="#29abe2" />


    </LinearLayout>

</layout>